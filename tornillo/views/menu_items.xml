<odoo>
    <!-- Acción para abrir la vista del modelo 'almacen.tornillo' -->
    <record id="action_tornillo" model="ir.actions.act_window">
        <field name="name">Tornillos</field>
        <field name="res_model">almacen.tornillo</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Desde aquí puedes gestionar los tornillos en el inventario.
            </p>
        </field>
    </record>

    <!-- Menú principal del módulo Tornillo -->
    <menuitem id="menu_tornillo_root" name="Gestion Tornillos" sequence="1"/>

    <!-- Submenú para el modelo Tornillo -->
    <menuitem id="menu_tornillo" name="Tornillos" parent="menu_tornillo_root" action="action_tornillo" sequence="2"/>
</odoo>